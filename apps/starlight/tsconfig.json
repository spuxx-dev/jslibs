{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@packages/*": ["../../packages/*"],
      "@docs/*": ["../../typedoc/output/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
