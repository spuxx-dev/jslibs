{
  "name": "@spuxx/nest-testing",
  "version": "2.0.0",
  "description": "A package containing testing-related utilities for NestJS applications.",
  "license": "MIT",
  "author": {
    "name": "spuxx",
    "email": "hi@spuxx.dev",
    "url": "https://spuxx.dev"
  },
  "keywords": [
    "spuxx"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/spuxx-dev/jslibs"
  },
  "homepage": "https://github.com/spuxx-dev/jslibs/blob/main/packages/nest-testing/README.md",
  "bugs": {
